<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/img"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Pizza Type Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Select your pizza"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/pizzaTypeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/pepperoniRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Pepperoni" />

                <RadioButton
                    android:id="@+id/margheritaRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Margherita" />

                <RadioButton
                    android:id="@+id/fourSeasonRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Four Season" />
            </RadioGroup>

            <!-- Pizza Size Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Select Size"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <RadioGroup
                android:id="@+id/sizeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/regularRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Regular" />

                <RadioButton
                    android:id="@+id/mediumRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Medium" />

                <RadioButton
                    android:id="@+id/largeRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Large" />
            </RadioGroup>

            <!-- Toppings Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Select your Toppings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <CheckBox
                android:id="@+id/onionsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Onions" />

            <CheckBox
                android:id="@+id/blackOlivesCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Black Olives" />
            <CheckBox
                android:id="@+id/onionsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Onions" />

            <CheckBox
                android:id="@+id/blackOlivesCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Black Olives" />
            <CheckBox
                android:id="@+id/onionsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Onions" />

            <CheckBox
                android:id="@+id/blackOlivesCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Black Olives" />
            <CheckBox
                android:id="@+id/onionsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Onions" />

            <CheckBox
                android:id="@+id/blackOlivesCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Black Olives" />
            <CheckBox
                android:id="@+id/onionsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Onions" />

            <CheckBox
                android:id="@+id/blackOlivesCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Black Olives" />
            <CheckBox
                android:id="@+id/onionsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Onions" />

            <CheckBox
                android:id="@+id/blackOlivesCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Black Olives" />

            <CheckBox
                android:id="@+id/extraCheeseCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Extra Cheese" />

            <CheckBox
                android:id="@+id/sausageCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Sausage" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="106dp"
                android:text="Submit Order"
                android:textStyle="bold"
                android:padding="12dp"
                />

        </LinearLayout>

    </ScrollView>
</FrameLayout>
